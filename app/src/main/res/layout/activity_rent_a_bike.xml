<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rent_bike"
    android:background="#000000"
    android:textColor="#ffffff"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rent_bike_image"
        android:src="@mipmap/bike"
        android:contentDescription="Bike to be rented"
        android:layout_above="@+id/bike_rent_description"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/post_description_string"
        android:id="@+id/bike_rent_description"
        android:enabled="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="192dp"
        android:background="#000000"
        android:textColor="#ffffff"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Rent_bike_button"
        android:id="@+id/rent_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:background="#000000"
        android:textColor="#ffffff"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner Profile"
        android:id="@+id/owner_profile_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#000000"
        android:textColor="#ffffff"
        />
</RelativeLayout>